<?xml version="1.0" encoding="UTF-8" ?>

<config>
	<images>
		<image name="tiles" src="main.png" tilesize="20"/>
		<image name="interface" src="interface.png">
			<sprite id="0" x="0" y="0" width="40" height="40"/>
			<sprite id="1" x="40" y="0" width="40" height="40"/>
		</image>
	</images>

	<map drawwidth="22"/>

	<fonts>
		<font name="Tahoma" src="fonts/tahoma.ttf"/>
		<font name="ArcadeClassic" src="fonts/ARCADECLASSIC.TTF"/>
		<font name="ArcadeDotted" src="fonts/ARCADE.TTF"/>
	</fonts>

	<!-- all animations and other character specific data (sets for example) -->
	<character name="robot" id="0">
		<def>
			<point texture="0" name="head"/>
			<point texture="1" name="body"/>
			<point texture="2" name="hand_left"/>
			<point texture="2" name="hand_right"/>
			<point texture="3" name="foot_left"/>
			<point texture="3" name="foot_right"/>
		</def>

		<set name="futuristic">
			<part slot="helmet" name="futuristic helmet">
				<texture x="000" y="000" width="000" height="000"/>
				<attribute name="strength">20</attribute>
			</part>
			<part slot="chestplate" name="futuristic chestplate">
				<texture x="000" y="000" width="000" height="000"/>
				<attribute name="armor">90</attribute>
			</part>
			<part slot="glove" name="futuristic glove">
				<texture x="000" y="000" width="000" height="000"/>
			</part>
			<part slot="shoe" name="futuristic shoe">
				<texture x="000" y="000" width="000" height="000"/>
			</part>
		</set>

		<anim name="walk" abortable="true">
			<step time="200">
				<move point="head" rotation="0" x="20" y="0"/>
			</step>
			<step time="200">
				<move point="head" rotation="0" x="-20" y="0"/>
			</step>
		</anim>

		<anim name="jump" abortable="false">

		</anim>
	</character>

	<tiles>
		<entry id="65535" x="652" y="0"/> 							<!-- ERROR -->
		<entry id="0" x="60" y="20"/>								<!-- AIR -->
		<entry id="1" x="0" y="0"/> 								<!-- DIRT -->
		<entry id="2" x="40" y="20"/>								<!-- COMPRESSED DIRT -->
		<entry id="11" x="20" y="0"/>								<!-- SAND -->
		<entry id="12" x="40" y="0"/>								<!-- RED SAND -->
		<entry id="13" x="20" y="20"/>								<!-- SANDSTONE -->
		<entry id="21" x="60" y="0"/>								<!-- RUIN -->
		<entry id="22" x="0" y="21"/>								<!-- DESTROYED RUIN -->

		<entry id="10001" x="0" y="84"/>							<!-- GLOWING GRASS -->
		<entry id="10002" x="21" y="84"/>							<!-- GLOWING TENDILL -->
		<entry id="10003" x="42" y="84"/> 							<!-- GLOWING ROOT -->
	</tiles>

	<overlay>
		<entry id="0" x="652" y="652"/> 							<!-- NONE -->
		<entry id="1" x="0" y="105"/>								<!-- EMERALD ORE -->
		<entry id="2" x="21" y="105"/> 								<!-- EMERALD ORE -->
		<entry id="11" x="147" y="105"/>							<!-- SAND -->
		<entry id="12" x="168" y="105"/>							<!-- SAND EDGE -->
		<entry id="13" x="126" y="105"/>							<!-- SAND SPOT -->
		<entry id="21" x="188" y="105"/>							<!-- SLIME DOTS -->
		<entry id="22" x="231" y="105"/>							<!-- SLIME -->
		<entry id="23" x="252" y="105"/>							<!-- SLIME EDGE -->
		<entry id="24" x="210" y="105"/>							<!-- SLIME SPOT -->
		<entry id="31" x="42" y="105"/>								<!-- GRASS -->
		<entry id="32" x="105" y="105"/>							<!-- GRASS WITH ROOTS -->
		<entry id="33" x="84" y="105"/>								<!-- GRASS EDGE -->
		<entry id="34" x="63" y="105"/>								<!-- GRASS SPOT -->
	</overlay>
</config>
