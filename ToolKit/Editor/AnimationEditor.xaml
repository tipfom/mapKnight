<UserControl x:Class="mapKnight.ToolKit.Editor.AnimationEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mapKnight.ToolKit.Editor"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <TextBlock x:Key="textblock_default" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.5" Text="Add an Animation to proceed!"/>
    </UserControl.Resources>
    <Grid>
        <ContentPresenter Name="contentpresenter_animation" Content="{StaticResource textblock_default}"/>
    </Grid>
</UserControl>
