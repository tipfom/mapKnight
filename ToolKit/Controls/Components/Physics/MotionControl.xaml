<UserControl x:Class="mapKnight.ToolKit.Controls.Components.Physics.MotionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mapKnight.ToolKit.Controls.Components.Physics"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Text="Bounce Factor" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Collider" VerticalAlignment="Top"/>
        <TextBox Name="textbox_bounce" Grid.Column="1" Grid.Row="0" PreviewTextInput="TextBoxFloat_PreviewTextInput" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top">
            <CheckBox Name="checkbox_mapcollider" Content="Map"/>
            <CheckBox Name="checkbox_platformcollider" Content="Platform"/>
        </StackPanel>
    </Grid>
</UserControl>
