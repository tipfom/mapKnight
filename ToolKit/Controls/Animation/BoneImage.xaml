<ContentControl x:Class="mapKnight.ToolKit.Controls.Components.Animation.BoneImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mapKnight.ToolKit.Controls.Components.Animation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" RenderTransformOrigin="0.5,0.5" MinWidth="1" MinHeight="1" AllowDrop="True"
                DragEnter="BoneImage_DragEnter" Drop="BoneImage_Drop">
    <ContentControl.RenderTransform>
        <RotateTransform/>
    </ContentControl.RenderTransform>
    <Grid x:Name="gridtest">
        <local:MoveThumb x:Name="movethumb" Cursor="SizeAll" Opacity="0"/>
        <local:RotateThumb x:Name="rotatethumb" Cursor="Hand" Width="10" Height="10" VerticalAlignment="Top" Margin="0,-15,0,0"/>
        <Border BorderBrush="Black" BorderThickness="1">
            <Image Name="image" Stretch="Fill" RenderTransformOrigin="0.5,0.5" RenderOptions.BitmapScalingMode="NearestNeighbor" IsHitTestVisible="False"/>
        </Border>
        <local:MoveableRenderTransformOrigin x:Name="rendertransformoriginthumb" Width="10" Height="10" Cursor="Hand" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</ContentControl>
